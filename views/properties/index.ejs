<% layout("/layouts/boilerplate") %>

<div class="sidebar-fixed">
    <h5 class="fw-bold mb-4"><i class="fa-solid fa-sliders me-2"></i>Filters</h5>
    <form action="/properties" method="GET">
        <div class="mb-3">
            <label class="form-label small fw-bold text-muted">CITY</label>
            <input type="text" name="city" class="form-control" placeholder="Search city...">
        </div>
        <div class="mb-3">
            <label class="form-label small fw-bold text-muted">PROPERTY TYPE</label>
            <select name="propertyType" class="form-select">
                <option value="">All Types</option>
                <option value="Flat">Flat</option>
                <option value="Villa">Villa</option>
                <option value="PG">PG</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label small fw-bold text-muted">BHK</label>
            <select name="bhk" class="form-select">
                <option value="">Any BHK</option>
                <option value="1 BHK">1 BHK</option>
                <option value="2 BHK">2 BHK</option>
                <option value="3 BHK">3 BHK</option>
            </select>
        </div>
        <div class="mb-4">
            <label class="form-label small fw-bold text-muted">MAX BUDGET (₹)</label>
            <input type="number" name="maxPrice" class="form-control" placeholder="e.g. 20000">
        </div>
        <button type="submit" class="btn btn-dark w-100 mb-2">Apply Filters</button>
        <a href="/properties" class="btn btn-outline-secondary w-100 text-decoration-none text-center btn-sm">Reset All</a>
    </form>
</div>

<div class="main-content-wrapper">
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Verified Properties</h2>
        <a href="/properties/new" class="btn btn-outline-success">
            <i class="fa-solid fa-plus me-2"></i>List Your Property
        </a>
    </div>
    

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xl-4 g-4">
        <% if (allProperties.length > 0) { %>
            <% for(let property of allProperties) { %>
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 property-card">
                        <img src="<%= property.image.url %>" class="card-img-top" alt="property" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title fw-bold"><%= property.title %></h5>
                            <p class="card-text text-muted mb-1">
                                <i class="fa-solid fa-location-dot me-2"></i><%= property.location %>, <%= property.country %>
                            </p>
                            <p class="card-text">
                                <span class="fw-bold text-success">₹<%= property.price.toLocaleString() %></span> / month
                            </p>
                            <div class="d-grid">
                                <a href="/properties/<%= property._id %>" class="btn btn-dark">View Details</a>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pb-3">
                            <span class="badge rounded-pill bg-info text-dark">
                                <i class="fa-solid fa-check-double me-1"></i>A-360 Verified
                            </span>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <img src="https://illustrations.popsy.co/gray/home-office.svg" alt="empty" style="width: 200px;" class="mb-3">
                <h4>No verified properties yet.</h4>
                <p class="text-muted">Check back later or submit your own property for verification!</p>
            </div>
        <% } %>
    </div>
    </div>
    </div>
</div>

