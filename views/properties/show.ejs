<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-3"><%= property.title %></h2>
            
            <div class="card border-0 shadow-sm mb-4">
                <img src="<%= property.image.url %>" class="card-img-top rounded show-img" alt="property image">
                <div class="card-body px-0">
                    <div class="d-flex align-items-center mb-3">
                        <span class="badge bg-success py-2 px-3">
                            <i class="fa-solid fa-shield-check me-2"></i>A-360 Verified Property
                        </span>
                        <span class="text-muted ms-3">
                            <i class="fa-solid fa-location-dot me-1"></i><%= property.location %>, <%= property.country %>
                        </span>
                    </div>
                    
                    <h4 class="fw-bold mt-4">About this space</h4>
                    <p class="text-muted lead" style="white-space: pre-line;">
                        <%= property.description %>
                    </p>
                    <hr>
                    <div class="col-8 mb-3">
                        
    <% if(currUser) { %>
    <h4>Leave a Review</h4>
    <form action="/properties/<%= property._id %>/reviews" method="POST" class="mb-3 needs-validation" novalidate>
        
        <div class="mt-3">
            <fieldset class="starability-basic">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" aria-label="No rating." />
  
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
        </div>

        <div class="mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control" required></textarea>
            <div class="invalid-feedback">Please share your experience.</div>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
    <% } %>

    <hr />

    <% if(property.reviews.length > 0) { %>
    <div class="row">
        <p><b>All Reviews</b></p>
        <% for(let review of property.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username %></h5>
                    <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                    <p class="card-text"><%= review.comment %></p>
                    
                    <% if(currUser && currUser._id.equals(review.author._id)) { %>
                    <form class="mb-3" method="POST" action="/properties/<%= property._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
    <% } %>
</div>
                
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow border-0 sticky-top" style="top: 100px; z-index: 10;">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-4">$<%= property.price.toLocaleString() %> <span class="fs-6 fw-normal text-muted">/ month</span></h3>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-dark btn-lg py-3 fw-bold">Contact Relocator</button>
                        <button class="btn btn-outline-secondary">Save to Wishlist</button>
                    </div>

                    <div class="mt-4 p-3 bg-light rounded">
                        <p class="mb-1 small text-muted text-uppercase fw-bold">Listed by</p>
                        <div class="d-flex align-items-center">
                            <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                <%= property.owner.username[0].toUpperCase() %>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold"><%= property.owner.username %></h6>
                                <small class="text-muted">A-360 Member</small>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="fa-solid fa-circle-info me-1"></i> 
                            This property has undergone a 5-point verification check by our relocation team.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .show-img {
        height: 450px;
        object-fit: cover;
        width: 100%;
    }
    .badge {
        font-size: 0.9rem;
    }
</style>