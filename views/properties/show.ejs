<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-3"><%= property.title %></h2>
            
            <div class="card border-0 shadow-sm mb-4">
                <img src="<%= property.image.url %>" class="card-img-top rounded show-img" alt="property image">
                <div class="card-body px-0">
                    <% if(currUser && property.owner._id.equals(currUser._id) && property.status === "rejected") { %>
                        <div class="alert alert-danger mt-3">
                        <strong>Admin Feedback:</strong> <%= property.adminFeedback %>
                        </div>
                    <% } %>
                    <div class="d-flex align-items-center mb-3">
                        <span class="badge bg-success py-2 px-3">
                            <i class="fa-solid fa-shield-check me-2"></i>A-360 Verified Property
                        </span>
                        <span class="text-muted ms-3">
                            <i class="fa-solid fa-location-dot me-1"></i><%= property.location %>, <%= property.country %>
                        </span>
                    </div>
                    
                    <h4 class="fw-bold mt-4">About this space</h4>
                    <p class="text-muted lead" style="white-space: pre-line;">
                        <%= property.description %>
                    </p>
                    <hr>
                    <div class="mt-4">
    <h5>Property Specifications</h5>
    <div class="row">
        <div class="col-6">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Type:</b> <%= property.propertyType %></li>
                <li class="list-group-item"><b>BHK:</b> <%= property.bhk %></li>
                <li class="list-group-item"><b>Area:</b> <%= property.carpetArea %> sq. ft</li>
            </ul>
        </div>
        <div class="col-6">
            <ul class="list-group list-group-flush">
    <li class="list-group-item">
        <b>Monthly Rent:</b> ₹<%= (property.price || 0).toLocaleString("en-IN") %>
    </li>
    <li class="list-group-item">
        <b>Deposit:</b> ₹<%= (property.deposit || 0).toLocaleString("en-IN") %>
    </li>
    <li class="list-group-item">
        <b>Furnishing:</b> <%= property.furnishing || "Not Specified" %>
    </li>
</ul>
        </div>
        <div class="mt-3">
    <h5>Amenities</h5>
    <div class="d-flex flex-wrap gap-2">
        <% if(property.amenities && property.amenities.length > 0) { %>
            <% for(let amenity of property.amenities) { %>
                <span class="badge rounded-pill bg-light text-dark border"><%= amenity %></span>
            <% } %>
        <% } else { %>
            <span class="text-muted small">No amenities listed</span>
        <% } %>
    </div>
</div>
    </div>
</div>
<hr>
                    <div class="col-8 mb-3">
                        
    <% if(currUser) { %>
    <h4>Leave a Review</h4>
    <form action="/properties/<%= property._id %>/reviews" method="POST" class="mb-3 needs-validation" novalidate>
        
        <div class="mt-3">
            <fieldset class="starability-basic">
  <div class="rating-wrapper">
    <input type="radio" id="star5" name="review[rating]" value="5" /><label for="star5" title="5 stars"></label>
    <input type="radio" id="star4" name="review[rating]" value="4" /><label for="star4" title="4 stars"></label>
    <input type="radio" id="star3" name="review[rating]" value="3" /><label for="star3" title="3 stars"></label>
    <input type="radio" id="star2" name="review[rating]" value="2" /><label for="star2" title="2 stars"></label>
    <input type="radio" id="star1" name="review[rating]" value="1" required /><label for="star1" title="1 star"></label>
</div>
</fieldset>
        </div>

        <div class="mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control" required></textarea>
            <div class="invalid-feedback">Please share your experience.</div>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
    <% } %>

    <hr />

    <% if(property.reviews.length > 0) { %>
    <div class="row">
        <p><b>All Reviews</b></p>
        <% for(let review of property.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username %></h5>
                    <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                    <p class="card-text"><%= review.comment %></p>
                    
                    <% if(currUser && currUser._id.equals(review.author._id)) { %>
                    <form class="mb-3" method="POST" action="/properties/<%= property._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>
    <% } %>
</div>
                
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow border-0 sticky-top" style="top: 100px; z-index: 10;">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-4">₹<%= property.price.toLocaleString() %> <span class="fs-6 fw-normal text-muted">/ month</span></h3>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-dark btn-lg py-3 fw-bold" onclick="revealContact('<%= property._id %>')">Contact Owner</button>
                        
                    </div>
                    <div id="contact-details" class="mt-3 p-3 border rounded bg-light" style="display: none;">
                        <p class="mb-1"><strong>Email:</strong> <span id="disp-email"></span></p>
                        <p class="mb-3"><strong>Mobile:</strong> <span id="disp-phone"></span></p>

                    <div class="mt-4 p-3 bg-light rounded">
                        <p class="mb-1 small text-muted text-uppercase fw-bold">Listed by</p>
                        <div class="d-flex align-items-center">
                            <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                <%= property.owner.username[0].toUpperCase() %>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold"><%= property.owner.username %></h6>
                                <small class="text-muted">A-360 Member</small>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="fa-solid fa-circle-info me-1"></i> 
                            This property has undergone a 5-point verification check by our relocation team.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .show-img {
        height: 450px;
        object-fit: cover;
        width: 100%;
    }
    .badge {
        font-size: 0.9rem;
    }
</style>

<script>
async function revealContact(id) {
    try {
        const response = await fetch(`/properties/${id}/contact`, {
            headers: { 'Accept': 'application/json' },
            credentials: 'same-origin'
        });
        if (response.status === 401) {
            window.location.href = "/login";
            return;
        }
        const data = await response.json();
        if (response.ok) {
            document.getElementById('disp-email').innerText = data.email;
            document.getElementById('disp-phone').innerText = data.phone;
            document.getElementById('contact-details').style.display = 'block';
        } else {
            window.location.href = "/login";
        }
    } catch (err) {
        console.error("Error:", err);
        window.location.href = "/login";
    }
}
</script>